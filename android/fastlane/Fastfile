# This file contains the fastlane.tools configuration
# You can find the documentation at https://docs.fastlane.tools
#
# For a list of all available actions, check out
#
#     https://docs.fastlane.tools/actions
#
# For a list of all available plugins, check out
#
#     https://docs.fastlane.tools/plugins/available-plugins
#

# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

default_platform(:android)

platform :android do
  # Helper to get version from pubspec.yaml
  def get_version_from_pubspec
    pubspec = File.read("../../pubspec.yaml")
    version_line = pubspec.match(/version:\s*(\d+\.\d+\.\d+)\+(\d+)/)
    if version_line
      { version: version_line[1], build: version_line[2].to_i }
    else
      { version: "1.0.0", build: 1 }
    end
  end

  desc "Runs all the tests"
  lane :test do
    gradle(task: "test")
  end

  desc "Build the Android app bundle (AAB)"
  lane :build do
    version_info = get_version_from_pubspec
    UI.message("Building version #{version_info[:version]} (#{version_info[:build]})")

    gradle(
      task: "clean bundleRelease",
      properties: {
        "versionCode" => version_info[:build],
        "versionName" => version_info[:version]
      }
    )
  end

  desc "Build APK for testing"
  lane :build_apk do
    version_info = get_version_from_pubspec
    UI.message("Building APK version #{version_info[:version]} (#{version_info[:build]})")

    gradle(
      task: "clean assembleRelease",
      properties: {
        "versionCode" => version_info[:build],
        "versionName" => version_info[:version]
      }
    )
  end

  desc "Deploy to Google Play Internal Testing track"
  lane :internal do
    build

    upload_to_play_store(
      track: "internal",
      aab: "../build/app/outputs/bundle/release/app-release.aab",
      skip_upload_metadata: true,
      skip_upload_images: true,
      skip_upload_screenshots: true
    )

    UI.success("Successfully uploaded to Internal Testing! ðŸ§ª")
  end

  desc "Deploy to Google Play Beta (Closed Testing) track"
  lane :beta do
    build

    upload_to_play_store(
      track: "beta",
      aab: "../build/app/outputs/bundle/release/app-release.aab",
      skip_upload_metadata: true,
      skip_upload_images: true,
      skip_upload_screenshots: true
    )

    UI.success("Successfully uploaded to Beta Testing! ðŸš€")
  end

  desc "Deploy a new version to Google Play Production"
  lane :deploy do
    build

    upload_to_play_store(
      track: "production",
      aab: "../build/app/outputs/bundle/release/app-release.aab",
      skip_upload_metadata: true,
      skip_upload_images: true,
      skip_upload_screenshots: true
    )

    UI.success("Successfully uploaded to Production! ðŸŽ‰")
  end

  desc "Promote Internal to Beta track"
  lane :promote_to_beta do
    upload_to_play_store(
      track: "internal",
      track_promote_to: "beta",
      skip_upload_aab: true,
      skip_upload_metadata: true,
      skip_upload_images: true,
      skip_upload_screenshots: true
    )

    UI.success("Promoted from Internal to Beta! ðŸ“ˆ")
  end

  desc "Promote Beta to Production track"
  lane :promote_to_production do
    upload_to_play_store(
      track: "beta",
      track_promote_to: "production",
      skip_upload_aab: true,
      skip_upload_metadata: true,
      skip_upload_images: true,
      skip_upload_screenshots: true
    )

    UI.success("Promoted from Beta to Production! ðŸš€")
  end

  desc "Download metadata from Google Play"
  lane :sync_metadata do
    download_from_play_store
  end

  desc "Upload only metadata to Google Play"
  lane :upload_metadata do
    upload_to_play_store(
      skip_upload_aab: true,
      skip_upload_images: false,
      skip_upload_screenshots: false
    )
  end
end
